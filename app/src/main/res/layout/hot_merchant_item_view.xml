<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/hot_merchant_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/image_is_gold"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_is_gold"
            android:layout_gravity="right"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_is_rest"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:background="@drawable/login_btn_bg"
            android:text="休息中"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="8sp"/>
    </FrameLayout>



    <FrameLayout
        android:id="@+id/info_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="70dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_is_top"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_go_top"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/hot_merchant_dp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="@string/app_name"
                android:singleLine="true"/>

        </LinearLayout>


        <TextView
            android:id="@+id/hot_merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            tools:text="@string/app_name"
            android:layout_gravity="center|left"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/hot_merchant_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="@string/app_name"
            android:layout_gravity="bottom"/>

    </FrameLayout>

    <Button
        android:id="@+id/hot_merchant_relation"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_orange_corner"
        android:text="联系商家"
        android:textSize="12sp"
        android:textColor="@color/white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />

</RelativeLayout>