<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qckj.dabei.view.ActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:function="button_left"
        app:srcLeft="@drawable/back_bg_selector">


        <EditText
            android:id="@+id/edit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:hint="请输入搜索内容"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/search_demand_bg"
            android:textSize="14sp"
            android:singleLine="true"/>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:background="@color/transparent"
            android:textSize="14sp"
            android:layout_alignParentRight="true"/>

    </com.qckj.dabei.view.ActionBar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/all_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/nearby_head_rb_selector"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="全部"
                    android:textColor="@drawable/nearby_head_text_bg_selector"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/merchants_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/nearby_head_rb_selector"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="商家"
                    android:textColor="@drawable/nearby_head_text_bg_selector"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/need_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/nearby_head_rb_selector"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="需求"
                    android:textColor="@drawable/nearby_head_text_bg_selector"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/service_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/nearby_head_rb_selector"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="服务"
                    android:textColor="@drawable/nearby_head_text_bg_selector"
                    android:textSize="15sp" />
            </LinearLayout>

    <com.qckj.dabei.view.listview.PullRefreshView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"/>

</LinearLayout>