<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/dialog_article_share_touch_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80808080" />

    <LinearLayout
        android:id="@+id/dialog_article_share_touch_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="10dp">

        <GridView
            android:id="@+id/dialog_article_share_gr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_corner"
            android:gravity="center"
            android:numColumns="4"
            android:padding="10dp"
            android:scrollbars="none"
            android:verticalSpacing="16dp"></GridView>


        <TextView
            android:id="@+id/dialog_share_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_corner"
            android:gravity="center"
            android:text="@string/app_cancel"
            android:textColor="@color/blue" />

    </LinearLayout>
</RelativeLayout>
