<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <com.qckj.dabei.view.ActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:function="button_left|text_title|text_right"
        app:text_title="新增地址"
        app:text_right="完成"
        app:srcLeft="@drawable/back_bg_selector"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="姓名："/>
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="14sp"
            android:hint="请输入收货人姓名"
            android:layout_toRightOf="@+id/text_name"
            android:background="@null"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="电话："/>
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="14sp"
            android:hint="请输入收货人电话"
            android:layout_toRightOf="@+id/text_phone"
            android:background="@null"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/text_city"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="城市："/>
        <TextView
            android:id="@+id/btn_city"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="14sp"
            android:hint="请选择收货人城市"
            android:layout_toRightOf="@+id/text_city"
            android:background="@null"
            android:drawableRight="@mipmap/icon_array_right"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="详细地址："/>
        <EditText
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="14sp"
            android:hint="请输入收货人详细地址"
            android:layout_toRightOf="@+id/text_address"
            android:background="@null"
            android:singleLine="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
